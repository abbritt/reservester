<h1>Add a new restaurant</h1>
<br>

<%= form_for :restaurant do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  
  <p>
  <%= f.label :phone %><br>
  <%= telephone_field(:user, :phone) %>
 </p>
 
  <p>
  <%= f.label :food_genre %><br>
  <%= f.text_area :food_genre %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>